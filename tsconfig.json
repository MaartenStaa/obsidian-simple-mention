{
  "compilerOptions": {
    "paths": {
      "PopoverComponent": ["node_modules/popover-plugin/src/popover.js"],
      "PopperComponent": ["node_modules/popper-plugin/src/popper.js"],
    },
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts",
    "decl.d.ts",
  ]
}
